@page
@model Cakeshop.Web.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست محصولات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست محصولات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreateProduct" class="btn btn-outline btn-success">افزودن محصول جدید</a>

                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان محصول</th>
                            <th>موجودیت</th>
                            <th>قیمت</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListProduct)
                        {
                            <tr>
                                <td>
                                    <img src="/product/image/@item.ImageName" style="max-width: 250px" class="thumbnail" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @if (item.IsExist == true)
                                    {
                                        <p class="text-success">موجود</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">نا موجود</p>
                                    }

                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    <a href="/Admin/Products/EditProduct/@item.ProductId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
