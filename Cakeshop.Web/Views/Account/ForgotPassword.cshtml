@model Cakeshop.Core.DTOs.Users.ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور ";
}

<section class="ftco-section">
    <div class="container col-lg-5 col-md-7 col-sm-10 col-xl-10 bg-colorform card" id="log-in-form">
        <div class="heading card-header">
            <h1>بازیابی کلمه عبور</h1>
        </div>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-warning">
                <p class="help-block">ایمیل بازیابی کلمه عبور برای شما ارسال شد.</p>
            </div>
        }
        <form asp-action="ForgotPassword" method="post" class="card-body">
            <div class="form-group">
                <input asp-for="Email" type="text" class="form-control" id="username" placeholder="ایمیل">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group form-group-btn">
                <button type="submit" class="btn btn-success btn-lg">تایید و ارسال</button>
            </div>


        </form>
    </div>
</section>



