@page "{id}"
@using Cakeshop.DataLayer.Entities.User
@model Cakeshop.Web.Pages.Admin.Users.EditUserModel
@{
    ViewData["Title"] = "افزودن کاربر";
    List<Role> Roles =ViewData["Roles"] as List<Role>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کاربر</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="EditUserViewModel.UserId"/>
        <input type="hidden" asp-for="EditUserViewModel.OldUserName"/>
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" asp-for="EditUserViewModel.UserName" class="form-control">
                        <span class="text-danger" asp-validation-for="EditUserViewModel.UserName"></span>
                        @if (ViewData["IsExistUserName"] != null)
                        {
                    <span class="help-block" style="color: red">نام کاربری قبلا ثبت شده است .</span>
                        }
                    </div>
                    <div class="form-group">
                        <label>ایمیل</label>
                        <input type="email" asp-for="EditUserViewModel.Email" class="form-control">
                        <span class="text-danger" asp-validation-for="EditUserViewModel.Email"></span>
                        @if (ViewData["IsExistEmail"] != null)
                        {
                    <span class="help-block" style="color: red">ایمیل قبلا ثبت شده است .</span>
                        }
                    </div>

                    <hr />
                    <div class="form-group">
                        <label>انتخاب نقش های کاربر</label>
                        @foreach (var item in Roles)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="selectedRoles" value="@item.RoleId" @((Model.EditUserViewModel.UserRoles.Any(r => r == item.RoleId) ? "checked" : ""))/>@item.RoleTitle
                                </label>
                            </div>
                        }

                    </div>
                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>


    </form>
</div>



